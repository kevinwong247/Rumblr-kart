  <div class="row">
    <div class="col-sm">
      
    </div>
    <div class="col-sm">
       <div class="card text-white bg-dark mb-3 cardcenter" style="max-width: 18rem;">
      <div class="card-header"><%= postforc.title %></div>
      <div class="card-body">
    <h5 class="card-text"><%= postforc.content %>.</h5>
    <p class="card-title">Username: <%= postforc.user.username %></p>
  </div>
</div>
    </div>
    <div class="col-sm">
      
    </div>
  </div>
