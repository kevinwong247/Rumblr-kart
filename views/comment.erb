<%commentsforc=postforc.comments%>

  <% commentsforc.each do |acomment|%>
    <div class="alert alert-success" role="alert">
  <h4 class="alert-heading">Username:<%=acomment.user.username%></h4>
  <p> <%=acomment.commentary%><br></p>
  <hr>
</div>
</div>
<%end%>



<form action="/comment/:id" method="post">
  <textarea name="content" cols="60" rows="10"></textarea><br>
  <input type="hidden" id="postId" name="postId" value="<%=postforc.id%>%">
  <input type="submit" value="Comment">
</form>